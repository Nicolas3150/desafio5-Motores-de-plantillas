{{>nav}}
<div class="productContainer">
    <h1>Productos: </h1>
    {{#if render}}
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>${{this.price}}</td>
                    <td><img src="{{this.thumbnail}}" alt=""></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}
    {{#unless render}}
    <h2>No hay productos</h2>
    {{/unless}}

</div>